// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Movie {
  id        Int       @id @default(autoincrement())
  title     String
  price     Float     @default(0)
  image     String
  showTime  DateTime
  bookings  Booking[]

  @@index([title])
  @@index([showTime])
}

model Booking {
  id        Int      @id @default(autoincrement())
  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id])
  seats     String   // เก็บที่นั่งเป็น "A1,A2,B5" เพื่อให้ตรงกับโค้ด .split(',') ของคุณ
  createdAt DateTime @default(now())

  @@index([movieId])
}